  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form" onsubmit="signupFormHandler(event)">

      <div class="form-group">
        <label for="name-signup">name:</label>
        <input value class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input value class="form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input value class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button id="signButton" class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script type="application/json" src="/js/login.js"></script>
